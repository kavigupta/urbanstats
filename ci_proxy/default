# nginx configuration

server {
    listen 80;

    location / {
        set $branch "";
        if ($host ~* "^([^.]+)\.staging\.urbanstats\.lukebrody\.com$") {
            set $branch $1;
        }
        if ($branch = "") {
            return 404;
        }
        root /root/urbanstats/ci_proxy/densitydb/repos/$branch;
        try_files $uri $uri/ =404;
    }
}
